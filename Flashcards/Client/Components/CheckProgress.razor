
<div class="check-progress__wrapper">

    <div class="check-progress__info-wrapper">

        <div class="check-progress__info check-progress__info--value">
            @Value
        </div>

        <div class="check-progress__info">
            /
        </div>

        <div class="check-progress__info check-progress__info--max-value">
            @MaxValue
        </div>

    </div>

    <div class="check-progress__bar-wrapper">

        <div class="check-progress__bar" style="@styleBar"></div>

    </div>

</div>

@code {
    [Parameter] public int Value { get; set; }
    [Parameter] public int MaxValue { get; set; }

    int percent => MaxValue == 0 ? 0 : (int)(Value / (float)MaxValue * 100f);
    string styleBar => $"width: {percent}%";
}
